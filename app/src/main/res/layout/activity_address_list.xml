<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@color/c_468ade"
        android:paddingTop="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_15">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@mipmap/abc_ic_ab_back_mtrl_am_alpha"
            android:layout_marginStart="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="收货地址"
            android:textColor="@color/c_fff"
            android:textSize="@dimen/sp_20"
            android:layout_marginStart="@dimen/dp_20" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_receipt_address"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/c_c6c6c9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center">

        <ImageButton
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@mipmap/address_add_btn_icon" />

        <TextView
            android:id="@+id/tv_add_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="新增地址"
            android:textColor="@color/c_46b3de"
            android:textSize="@dimen/sp_14"
            android:layout_marginStart="@dimen/dp_10" />
    </LinearLayout>
</LinearLayout>